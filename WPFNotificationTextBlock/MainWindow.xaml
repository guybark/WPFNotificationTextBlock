<Window x:Class="WPFNotificationTextBlock.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFNotificationTextBlock"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <Button x:Name="RaiseEventButton" 
                Content="Raise UIA Notification event" 
                Margin="0, 0, 0, 20"
                Click="RaiseEventButton_Click"/>
            <Button x:Name="NextButton" 
                Content="Next" 
                Margin="0, 0, 0, 20" />
            <local:NotificationTextBlock x:Name="StatusTextBlock" />
        </StackPanel>
    </Grid>
</Window>
